if has('gui_running')
  set guioptions-=T   " no toolbar
  set number          " line numers
  set guifont=Monospace\ 10
  set nomh            " no mouse hide
endif

colorscheme desert
set ai
set display=uhex
set esckeys
set expandtab
set hidden
set ic
set incsearch
set laststatus=2
set modeline
set modelines=1
set nobackup    " no backups
set noerrorbells
set nosplitbelow
set paste
set ruler
set shiftwidth=2
set showcmd
set showmatch
set showmode
set tabstop=2
set mouse=a
set ttymouse=xterm

fixdel
syntax on
